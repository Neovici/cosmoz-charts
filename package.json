{
  "name": "@neovici/cosmoz-charts",
  "version": "2.0.0",
  "description": "Create beautiful charts using billboard.js",
  "keywords": [
    "charts",
    "web-components"
  ],
  "homepage": "https://github.com/Neovici/cosmoz-charts#readme",
  "bugs": {
    "url": "https://github.com/Neovici/cosmoz-charts/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Neovici/cosmoz-charts.git"
  },
  "license": "Apache-2.0",
  "author": "Cristian Necula <virusz@gmail.com>",
  "main": "cosmoz-chart.js",
  "directories": {
    "test": "test"
  },
  "files": [
    "cosmoz-*.js"
  ],
  "scripts": {
    "lint": "eslint --cache --ext .js,.html .",
    "start": "npm run storybook",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:compatibility": "karma start --compatibility all --auto-watch=true --single-run=false",
    "storybook": "start-storybook --node-resolve --watch --open",
    "storybook:build": "build-storybook",
    "storybook:deploy": "storybook-to-ghpages"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "branch": "master"
  },
  "publishConfig": {
    "access": "public"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "billboard.js": "^2.1.1",
    "d3-format": "^2.0.0",
    "d3-scale-chromatic": "^2.0.0",
    "d3-time-format": "^3.0.0",
    "haunted": "^4.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@neovici/eslint-config": "^1.2.1",
    "@open-wc/demoing-storybook": "^2.4.2",
    "@open-wc/testing": "^2.5.27",
    "@open-wc/testing-karma": "^3.3.12",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@storybook/storybook-deployer": "^2.8.6",
    "deepmerge": "^4.2.2",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "karma": "^5.2.3",
    "karma-firefox-launcher": "^1.3.0",
    "karma-sauce-launcher": "^4.0.0",
    "semantic-release": "^17.0.0",
    "sinon": "^9.0.0",
    "typescript": "^4.0.0"
  }
}
